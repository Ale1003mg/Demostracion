@model Demo.view_Mante.Dto.Dto.Dto_Usuarios

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>
<hr />
<br />
<div action="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" hidden="hidden">
                            <span class="input-group-text">Id</span>
                            <input asp-for="U_Id" class="form-control" />
                            <span asp-validation-for="U_Id" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Nombre</span>
                            <input asp-for="U_Nombre" class="form-control" />
                            <span asp-validation-for="U_Nombre" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Apellidos</span>
                            <input asp-for="U_Apellidos" class="form-control" />
                            <span asp-validation-for="U_Apellidos" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3p">
                            <span class="input-group-text">Telefono</span>
                            <input asp-for="U_Telefono" class="form-control" />
                            <span asp-validation-for="U_Telefono" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="input-group mb-3">
                            <span class="input-group-text">Dirrección</span>
                            <input asp-for="U_Direccion" class="form-control" />
                            <span asp-validation-for="U_Direccion" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Correo</span>
                            <input asp-for="Correo" class="form-control" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Contraseña</span>
                            <input asp-for="U_Contrasena" class="form-control" type="password" />
                            <span asp-validation-for="U_Contrasena" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Estado</span>
                            <select class="form-select" asp-for="U_Estado" required>
                                <option>Seleccione</option>
                                <option value="true">Activo</option>
                                <option value="False">Inactivo</option>
                            </select>
                            <span asp-validation-for="U_Estado" class="text-danger"></span>
                        </div>

                        <div class="form-group" hidden="hidden">
                            <span class="input-group-text">Accion</span>
                            <input asp-for="accion" class="form-control" value="2" />
                            <span asp-validation-for="accion" class="text-danger"></span>
                        </div>
                        <center>
                            <div class="btn-group text-center">
                                <input type="submit" value="Editar" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                            </div>
                        </center>
                    </form>
                </div>
                <div class="col-3"></div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
